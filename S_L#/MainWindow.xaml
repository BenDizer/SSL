<Window
    x:Class="S_L_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:S_L_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#282C34">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListBox x:Name="FolderList" SelectionChanged="FolderList_SelectionChanged" Background="#282C34" Foreground="White" BorderBrush="#61AFEF" BorderThickness="2" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
